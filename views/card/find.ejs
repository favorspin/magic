
    <div>
        <%  if (!data || data.length == 0) { %>
            <hr>
            There are no cards in the database
        <% } else { %>
        <% if(req.param('skip')) { %>
            <a href="/card?sort=name&limit=25<% if(req.param('skip') > 25) { %>&skip=<%= (+req.param('skip')) - 25 %><% } %>">Prev</a><% } %>
        <a href="/card?sort=name&limit=25&skip=<% if(req.param('skip')) { %><%= (+req.param('skip')) + (+25) %><% } else { %>25<% } %>">Next</a>
        <hr>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Rarity</th>
                    <th>Set</th>
                    <th>Type</th>
                </tr>
            </thead>
            <tbody>
            <%_.each(data, function(card) { %>
                <tr>
                    <td>
                        <a href="<%= sails.getBaseurl() %>/card/<%= card.id %>"><img class="cardThumb" src="http://gatherer.wizards.com/Handlers/Image.ashx?multiverseid=<%= card.multiverseId %>&type=card"></a>
                    </td>
                    <td>
                        <a href="<%= sails.getBaseurl() %>/card/<%= card.id %>"><%= card.name %></a>
                    </td>
                    <td>
                        <%= card.rarity %>
                    </td>
                    <td>
                        <a href="<%= sails.getBaseurl() %>/set/<%= card.set.id %>"><%= card.set.name %></a>
                    </td>
                    <td>
                        <%= card.type %>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
        <% } %>
    </div>